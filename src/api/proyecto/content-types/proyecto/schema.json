{
  "kind": "collectionType",
  "collectionName": "proyectos",
  "info": {
    "singularName": "proyecto",
    "pluralName": "proyectos",
    "displayName": "Proyecto",
    "description": "Proyectos de construcción y remodelación"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "nombre_proyecto": {
      "type": "string",
      "required": true
    },
    "token_nfc": {
      "type": "uid",
      "required": true,
      "unique": true
    },
    "estado_general": {
      "type": "enumeration",
      "enum": [
        "En Planificación",
        "En Ejecución",
        "Completado"
      ],
      "default": "En Planificación"
    },
    "fecha_inicio": {
      "type": "date",
      "required": true
    },
    "ultimo_avance": {
      "type": "text",
      "required": false
    },
    "clientes": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "plugin::users-permissions.user",
      "inversedBy": "proyectos_como_cliente"
    },
    "gerentes": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "plugin::users-permissions.user",
      "inversedBy": "proyectos_como_gerente"
    },
    "hitos": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::hito.hito",
      "mappedBy": "proyecto"
    },
    "comentarios": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::comentario-proyecto.comentario-proyecto",
      "mappedBy": "proyecto"
    },
    "es_publico": {
      "type": "boolean",
      "default": true,
      "required": false,
      "description": "Si es false, requiere autenticación para ver el proyecto"
    }
  }
}
